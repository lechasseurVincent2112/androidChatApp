<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dateMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:textSize="@dimen/dateSize" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="@dimen/avatarWidth"
        android:layout_height="@dimen/avatarHeight"
        android:layout_gravity="end"
        android:contentDescription="@string/avatarimage"
        tools:srcCompat="@tools:sample/avatars"
        android:id="@+id/avatar"
        app:layout_constraintBottom_toTopOf="@+id/nickname"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_photo_camera" />

    <TextView
        android:id="@+id/user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="@string/vous"
        android:textColor="#4CAF50"
        android:textSize="@dimen/usernameSize" />

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="@dimen/layout_marginEnd"
        android:background="@drawable/bg_out"
        android:paddingStart="@dimen/padding"
        android:paddingTop="@dimen/padding"
        android:paddingEnd="@dimen/paddingEnd"
        android:paddingBottom="@dimen/padding"
        android:textColor="@android:color/white" />
</LinearLayout>